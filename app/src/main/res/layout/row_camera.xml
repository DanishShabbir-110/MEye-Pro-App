<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvVenueName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="venue: Lab 1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ivEdit"/>

        <ImageView
            android:id="@+id/ivEdit"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_edit"
            app:tint="#616161"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@+id/ivDelete"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tvVenueName"/>

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_delete"
            app:tint="#D32F2F"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivEdit"/>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tvVenueName"/>

        <TextView
            android:id="@+id/tvFrontLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Front :"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"/>

        <TextView
            android:id="@+id/tvFrontChannel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/tvFrontLabel"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvFrontLabel"/>

        <TextView
            android:id="@+id/tvFrontStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Online"
            android:textSize="10sp"
            android:textColor="#2E7D32"
            android:background="#E8F5E9"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/tvFrontChannel"
            app:layout_constraintTop_toTopOf="@+id/tvFrontLabel"
            app:layout_constraintBottom_toBottomOf="@+id/tvFrontLabel"/>


        <TextView
            android:id="@+id/tvBackLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back:"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toEndOf="@+id/tvFrontStatus"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvFrontLabel"/>

        <TextView
            android:id="@+id/tvBackChannel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/tvBackLabel"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvBackLabel"/>

        <TextView
            android:id="@+id/tvBackStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Offline"
            android:textSize="10sp"
            android:textColor="#D32F2F"
            android:background="#FFEBEE"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/tvBackChannel"
            app:layout_constraintTop_toTopOf="@+id/tvBackLabel"
            app:layout_constraintBottom_toBottomOf="@+id/tvBackLabel"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>