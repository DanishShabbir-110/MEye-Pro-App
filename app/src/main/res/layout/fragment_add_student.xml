<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    android:fillViewport="true"
    tools:context=".Datacell.Fragments.AddStudentFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <View
            android:id="@+id/header_view"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/bg_header_wave"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvAppTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:text="MEYE Pro with timetable and attendance"
            android:textColor="@color/white"
            android:alpha="0.8"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvScreenTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Add Student"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tvAppTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvAppTitle" />

        <androidx.cardview.widget.CardView
            android:id="@+id/mainContentCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="120dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <TextView
                    android:id="@+id/tvFaceDataHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Images"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvSubHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Capture 4 angles for student recognition."
                    android:textColor="@color/text_hint"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvFaceDataHeader" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardImg1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="12dp"
                    app:cardBackgroundColor="@color/gray_light"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:layout_constraintEnd_toStartOf="@+id/cardImg2"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvSubHeader">

                    <ImageView
                        android:id="@+id/ivStuFrontImg1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_launcher_foreground" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardImg2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:cardBackgroundColor="@color/gray_light"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:layout_constraintBottom_toBottomOf="@+id/cardImg1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/cardImg1"
                    app:layout_constraintTop_toTopOf="@+id/cardImg1">

                    <ImageView
                        android:id="@+id/ivStuFrontImg2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_launcher_foreground" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardImg3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="12dp"
                    app:cardBackgroundColor="@color/gray_light"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:layout_constraintEnd_toEndOf="@+id/cardImg1"
                    app:layout_constraintStart_toStartOf="@+id/cardImg1"
                    app:layout_constraintTop_toBottomOf="@+id/cardImg1">

                    <ImageView
                        android:id="@+id/ivStuLeftImg"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_launcher_foreground" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardImg4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:cardBackgroundColor="@color/gray_light"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:layout_constraintBottom_toBottomOf="@+id/cardImg3"
                    app:layout_constraintEnd_toEndOf="@+id/cardImg2"
                    app:layout_constraintStart_toStartOf="@+id/cardImg2"
                    app:layout_constraintTop_toTopOf="@+id/cardImg3">

                    <ImageView
                        android:id="@+id/ivStuRightImg"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_launcher_foreground" />
                </androidx.cardview.widget.CardView>

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="32dp"
                    android:background="#E0E0E0"
                    app:layout_constraintTop_toBottomOf="@+id/cardImg3" />

                <TextView
                    android:id="@+id/tvDetailsHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Student Details"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/divider" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilStuRegno"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:hint="Registration No (e.g. 19-Arid-123)"
                    android:textColorHint="@color/black"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:hintTextColor="@color/colorPrimary"
                    app:layout_constraintTop_toBottomOf="@+id/tvDetailsHeader">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etStuRegno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilStuName"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Full Name"
                    android:textColorHint="@color/black"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:hintTextColor="@color/colorPrimary"
                    app:layout_constraintTop_toBottomOf="@+id/tilStuRegno">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etStuName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilStuPassword"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Password"
                    android:textColorHint="@color/black"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:endIconMode="password_toggle"
                    app:hintTextColor="@color/colorPrimary"
                    app:layout_constraintTop_toBottomOf="@+id/tilStuName">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etStuPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilStuDiscipline"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Select Discipline (BSCS, BSSE...)"
                    android:textColorHint="@color/black"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:hintTextColor="@color/colorPrimary"
                    app:layout_constraintTop_toBottomOf="@+id/tilStuPassword">

                    <AutoCompleteTextView
                        android:id="@+id/spStuDiscipline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilStuSession"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Session (e.g. Fall 2022)"
                    android:textColorHint="@color/black"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:hintTextColor="@color/colorPrimary"
                    app:layout_constraintTop_toBottomOf="@+id/tilStuDiscipline">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etStuSession"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btnAddStudent"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="40dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="Save Student Info"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:cornerRadius="16dp"
                    app:elevation="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tilStuSession" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>